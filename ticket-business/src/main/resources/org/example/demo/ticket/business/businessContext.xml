<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ===== DÃ©claration des Managers - No more needed in case of Annotations ===== -->

     <bean id="daoFactory" class="org.example.demo.ticket.consumer.impl.dao.DaoFactoryImpl">
     </bean>
    
    <bean id="abstractManager" abstract="true">
    	<property name="daoFactory" ref="daoFactory" />
    </bean>
    
    <bean id="projetManager" class="org.example.demo.ticket.business.imple.manager.ProjetManagerImple" parent="abstractManager"/>
    <bean id="ticketManager" class="org.example.demo.ticket.business.imple.manager.TicketManagerImple" parent="abstractManager"/>
     <bean id="ticketStatutManager" class="org.example.demo.ticket.business.imple.manager.TicketStatutManagerImpl" parent="abstractManager"/>
  <bean id="utilisateurManager" class="org.example.demo.ticket.business.imple.manager.UtilisateurManagerImpl" parent="abstractManager"/>
    <!-- ===== ManagerFactory - replaced by annotations -->
    <bean id="managerFactory" class="org.example.demo.ticket.business.imple.manager.ManagerFactoryImple">
        <property name="projetManager" ref="projetManager"/>
        <property name="ticketManager" ref="ticketManager"/>
        <property name="utilisateurManager" ref="utilisateurManager"/>
        <property name="ticketStatutManager" ref="ticketStatutManager"/>
    </bean>
    
    <bean id="txManagerTicket" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="dataSourceTicket"/>
</bean>
</beans>
